version: '3'
services:

  api:
    build: .
    depends_on:
      - elastic
    ports:
      - "9876:9876"
    environment:
      CONFIG: /etc/monocle/config.yaml
      ELASTIC_CONN: elastic:9200
      ALLOW_ORIGIN: "http://${MONOCLE_HOST:-localhost}:3000"
      #FLASK_ENV: development
      CLIENT_ID: '${GITHUB_CLIENT_ID:-}'
      CLIENT_SECRET: '${GITHUB_CLIENT_SECRET:-}'
      REDIRECT_URL: 'http://${MONOCLE_HOST:-localhost}:9876/api/0/authorize'
    command: uwsgi --uid guest --gid nogroup --http :9876 --manage-script-name --mount /app=monocle.webapp:app
    volumes:
      - $PWD/etc:/etc/monocle:Z

  elastic:
    image: "docker.elastic.co/elasticsearch/elasticsearch:6.8.8"
    ulimits:
      nofile:
        soft: 65535
        hard: 65535
    ports:
      - "9200:9200"
    volumes:
      - $PWD/data:/usr/share/elasticsearch/data:Z

  crawler:
    build: .
    depends_on:
      - elastic
    command: monocle --elastic-conn elastic:9200 crawler --config /etc/monocle/config.yaml
    volumes:
      - $PWD/etc:/etc/monocle:Z
      - $PWD/dump:/var/lib/crawler:Z

  web:
    build: web
    depends_on:
      - api
    ports:
      - "3000:3000"
    environment:
      REACT_APP_API_URL: "http://${MONOCLE_HOST:-localhost}:9876"
      REACT_APP_TITLE: "${MONOCLE_TITLE:-}"

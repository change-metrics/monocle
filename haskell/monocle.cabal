cabal-version:       3.0
name:                monocle
version:             0.1.0.0
homepage:            https://github.com/change-metrics/monocle#readme
bug-reports:         https://github.com/change-metrics/monocle/issues
license:             AGPL-3.0-only
license-file:        LICENSE
author:              Monocle authors
maintainer:          Monocle authors <fboucher@redhat.com>
copyright:           2021 Monocle authors
category:            Development
build-type:          Simple
extra-doc-files:     README.md
tested-with:         GHC == 8.10.4
extra-source-files:  dhall-monocle/Monocle/**/*.dhall,
                     github-schema/schema.docs.graphql,
                     gitlab-schema/schema.graphql,
                     test/data/*.yaml,
                     test/data/*.json

source-repository head
  type:                git
  location:            https://github.com/change-metrics/monocle.git

common common-options
  ghc-options:         -Wall
                       -Wcompat
                       -Widentities
                       -Wincomplete-uni-patterns
                       -Wincomplete-record-updates
                       -Wno-missing-pattern-synonym-signatures
                       --write-ghc-environment-files=always
                       -- Enable stan integration
                       -fwrite-ide-info
                       -hiedir=.hie
  if impl(ghc >= 8.0)
    ghc-options:       -Wredundant-constraints
  if impl(ghc >= 8.2)
    ghc-options:       -fhide-source-paths
  if impl(ghc >= 8.4)
    ghc-options:       -Wpartial-fields
  if impl(ghc >= 8.10)
    ghc-options:       -Wunused-packages

  default-language:    Haskell2010
  default-extensions:  BangPatterns,
                       DeriveGeneric,
                       DerivingStrategies,
                       GeneralizedNewtypeDeriving,
                       LambdaCase,
                       MultiWayIf,
                       NamedFieldPuns,
                       NamedWildCards,
                       NoImplicitPrelude,
                       NumDecimals,
                       NumericUnderscores,
                       OverloadedStrings,
                       PatternSynonyms,
                       RecordWildCards,
                       ScopedTypeVariables,
                       TypeApplications,
                       TypeOperators

common codegen
  default-language:    Haskell2010
  hs-source-dirs:      codegen
  build-depends:       base                       < 5
                     , aeson
                     , bytestring
                     , containers                 < 0.7
                     , deepseq                    < 1.5
                     , proto3-suite               >= 0.4.2
                     , proto3-wire                >= 1.2.0
                     , text
                     , vector                     < 0.13

common test-options
  hs-source-dirs:      test
  build-depends:       base                       < 5
                     , monocle
                     , relude                     > 1.0 && < 1.1
                     , tasty                      < 1.5
                     , tasty-hunit                < 0.11
  ghc-options:         -threaded -rtsopts -with-rtsopts=-N

common cli-options
  hs-source-dirs:      app
  build-depends:       optparse-generic           < 1.5
                     , monocle
                     , relude                     > 1.0 && < 1.1
  ghc-options:         -threaded -rtsopts -with-rtsopts=-N

library
  import:              common-options, codegen
  build-depends:       base                       < 5
                     , MonadRandom
                     , aeson
                     , aeson-casing
                     , binary                     ^>= 0.8
                     , bloodhound                 >= 0.16.0.0
                     , bugzilla-redhat            >= 0.3.2
                     , bytestring                 >= 0.10
                     , byteslice                  ^>= 0.2
                     , connection
                     , containers                 ^>= 0.6
                     , dhall                      ^>= 1.39
                     , dhall-yaml                 ^>= 1.2
                     , directory
                     , either                     ^>= 5
                     , exceptions                 < 0.11
                     , http-client                < 0.8
                     , http-client-tls            < 0.4
                     , http-types                 ^>=0.12
                     , json-syntax                ^>= 0.2
                     , lens
                     , megaparsec                 < 10
                     , morpheus-graphql-client    ^>= 0.17
                     , mtl
                     , network-uri                < 2.6.5
                     , parser-combinators         < 1.3
                     , proto3-suite               >= 0.4.2
                     , relude                     > 1.0.0.0
                     , retry                      < 0.9
                     , say                        ^>= 0.1
                     , servant                    ^>= 0.18.2
                     , servant-options            ^>= 0.1
                     , servant-server             ^>= 0.18.2
                     , streaming                  < 0.3
                     , tasty-hunit                < 0.11
                     , text-short                 ^>= 0.1
                     , text-time                  ^>= 0.3
                     , time                       < 1.10
                     , transformers
                     , vector
                     , wai                        ^>= 3.2.3
                     , wai-cors                   ^>= 0.2
                     , wai-logger                 ^>= 2.3
                     , warp                       ^>= 3.3.15
  hs-source-dirs:      src
  exposed-modules:     Monocle.Prelude
                     , Monocle.Env

                     -- monocle api
                     , Monocle.Api
                     , Monocle.Api.Config
                     , Monocle.Api.Server

                     -- api client for lentille
                     , Monocle.Client
                     , Monocle.Client.Api
                     , Monocle.Client.Worker

                     -- servant
                     , Monocle.Servant.HTTP
                     , Monocle.Servant.PBJSON

                     -- bloodhound
                     , Monocle.Backend.Documents
                     , Monocle.Backend.Index
                     , Monocle.Backend.Queries
                     , Monocle.Backend.Test

                     -- megaparsec search language
                     , Monocle.Search.CLI
                     , Monocle.Search.Lexer
                     , Monocle.Search.Parser
                     , Monocle.Search.Query
                     , Monocle.Search.Syntax

                     -- companion feature
                     , Monocle.Companion

                     -- Lentille
                     , Lentille
                     , Lentille.Bugzilla

                     , Lentille.GitHub
                     , Lentille.GitHub.Favorites
                     , Lentille.GitHub.Issues

                     , Lentille.GitLab
                     , Lentille.GitLab.MergeRequests
                     , Lentille.GitLab.Group
                     , Lentille.GitLab.Adapter

                     , Macroscope.Main
                     , Macroscope.Worker

                     -- Fast json helpers
                     , Json.Extras

                     -- Codegen
                     , Monocle.Change
                     , Monocle.Config
                     , Monocle.Search
                     , Monocle.TaskData
                     , Monocle.Crawler
                     , Monocle.UserGroup
                     , Monocle.Project

  other-modules:       Database.Bloodhound.Raw

executable monocle-search
  import:              common-options
  hs-source-dirs:      app
  main-is:             Search.hs
  build-depends:       base, monocle

executable monocle-api
  import:              common-options
  hs-source-dirs:      app
  main-is:             Api.hs
  build-depends:       base, monocle, relude

executable lentille-bugzilla
  import:              common-options, cli-options
  main-is:             LentilleBugzilla.hs
  build-depends:       streaming                  < 0.3
                     , time                       < 1.12

executable lentille-github
  import:              common-options, cli-options
  main-is:             LentilleGithub.hs
  build-depends:       streaming                  < 0.3
                     , time                       < 1.12

-- executable lentille-gitlab
--  import:              common-options, cli-options
--  main-is:             LentilleGitlab.hs

executable macroscope
  import:              common-options, cli-options
  main-is:             Macroscope.hs

benchmark json-decode
  import:              common-options
  type:                exitcode-stdio-1.0
  hs-source-dirs:      test
  build-depends:       base, aeson, bloodhound, byteslice, bytestring, criterion, json-syntax, monocle, text-short, text-time
  main-is:             JsonDecode.hs
  ghc-options:         -threaded -rtsopts -with-rtsopts=-N

test-suite monocle-test
  import:              common-options
  type:                exitcode-stdio-1.0
  hs-source-dirs:      test
  main-is:             Spec.hs
  build-depends:       base                       < 5
                     , aeson-pretty
                     , http-client                < 0.8
                     , http-mock                  < 0.2
                     , http-types                 < 0.13
                     , monocle
                     , proto3-suite               >= 0.4.2
                     , relude                     > 1.0 && < 1.1
                     , tasty                      < 1.5
                     , tasty-hunit                < 0.11
                     , time
                     , wai                        < 3.3
  other-modules:       Monocle.Mock
  ghc-options:         -threaded
                       -rtsopts
                       -with-rtsopts=-N

test-suite monocle-integration-test
  import:              common-options, test-options
  type:                exitcode-stdio-1.0
  main-is:             Integration.hs

test-suite lentille-bugzilla-test
  import:              common-options, test-options
  type:                exitcode-stdio-1.0
  other-modules:       Lentille.BugzillaMock
  main-is:             Lentille/Bugzilla/Spec.hs
  build-depends:       bugzilla-redhat            >= 0.3.2
                     , http-types                 < 0.13
                     , monocle
                     , network                    < 4
                     , vector                     < 0.13
                     , wai                        < 3.3
                     , warp                       < 3.4

test-suite monocle-doctest
  type:               exitcode-stdio-1.0
  default-language:   Haskell2010
  hs-source-dirs:     test
  ghc-options:        -threaded -Wall
  main-is:            Doctest.hs
  build-depends:      base
                    , aeson-pretty < 0.8.9
                    , doctest >= 0.9.3

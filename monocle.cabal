                     , network-uri                >= 2.5
                     , oidc-client                >= 0.6.0
                     , optparse-applicative
                     , parser-combinators         >= 1.2
                     , prometheus-client          >= 1.0
                     , prometheus-metrics-ghc     >= 1.0
                     , proto3-suite               >= 0.6.0
                     , qq-literals
                     , relude                     >= 1.0
                     , retry-effectful
